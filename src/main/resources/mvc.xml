<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--不仅要包含mvc.xml内的配置；还需引入包含Spring中service和mapper所在的配置文件 -->
    <import resource="classpath:applicationContext.xml"/>
    <!--MVC的注解解析器：@RequestMapping -->
    <mvc:annotation-driven/>
    <!--试图解析器:配置前后视图名称的前后缀 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>
    <!--配置拦截器:告诉SpringMvc框架，我们有一个自定义到拦截器
    <mvc:interceptors>
        <mvc:interceptor>
            &lt;!&ndash;配置拦截器:哪些请求需要经过拦截器 &ndash;&gt;
            <mvc:mapping path="/**"/>
            &lt;!&ndash;配置拦截器:哪些请求排除，不经过拦截器 &ndash;&gt;
            <mvc:exclude-mapping path="/login.do"/>
            &lt;!&ndash;配置拦截器:拦截器路径 &ndash;&gt;
            <bean class="cn.wanzizoo.rbac.web.interceptor.CheckLoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>-->
</beans>
